/*
Onderaan bij console vul je je pokemon1 in, pas op met enter knop, druk met de muis.

nextLine() gebruik je om Strings (woorden) te lezen wanneer de user iets invult (input).

 */

import java.util.Scanner;           // Import scanner class (package).

public class ScannerOef {

    public static void main(String[] args){

        Scanner oefScan = new Scanner(System.in);   // System.in = invoeren (input) bij de console hieronder (typen).

        System.out.println("Please enter pokemon 1");

        String pokemon1 = oefScan.nextLine();       // Wat de user invult wordt gelijk gezet aan pokemon1.
                                                    // nextLine() leest Strings, dus de volgende regel wat er
                                                    //  wordt getypt, staat gelijk aan pokemon1.

        System.out.println("Your pokemon is: " + pokemon1);

        System.out.println("Your are done.");
    }
}

//----------------------------------------------------------------------------

/*
Er zijn meerdere manieren om data types te lezen van user input.

Door scan. (punt), kun je lezen welke methodes() je kan gebruiken.

Er zijn ook: nextByte(), nextFloat(), nextLong(), nextShort().
 */

import java.util.Scanner;

public class ScannerOef{

    public static void main(String[] args){

        Scanner scan = new Scanner(System.in);

        System.out.println("What is your first name?");     // leest Strings
        String name = scan.next();                          // scan.next(), pakt de volgende woord wat er getypt wordt.

        System.out.println("What is your age?");        // leest cijfers
        int age = scan.nextInt();                       // scan.nextInt(), pakt de volgende cijfers wat wordt ingevoerd.

        System.out.println("What is salary?");        // leest cijfers met decimalen.
        double salary = scan.nextDouble()
        
        
        System.out.println("What is senior quote?");
        String quote = scan.next();
        quote = quote + scan.nextLine();
        // hetzelfde als: quote += scan.nextLine();

        System.out.println("Thank you "  + name + ", you are " + age + " years old");
        System.out.println("And your quote is " + quote);

    }
}









